if [[ $# -ne 2 ]] ; then
	echo "$0: two arguments needed" 1>&2
	exit 1
fi

case "$EAPI" in 0|1|2) ED=${D} ;; esac

destdir=${2%/*}
[[ ! -d ${ED}${destdir} ]] && dodir "${destdir}"

exec ln -f "${ED}$1" "${ED}$2"
